{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "react",
    "rootDir": "src",
    "outDir": ".",
    "tsBuildInfoFile": ".tsbuildinfo",
    "typeRoots": ["src/typings"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx"]
}
